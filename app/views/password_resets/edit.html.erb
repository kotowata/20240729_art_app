<% content_for(:title, t('.title')) %>
<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-start min-h-screen">
  <div class="max-w-4xl mx-auto px-4 mt-10">
    <div class="flex flex-col">
      <div class="w-full mx-auto">
        <div class="card bg-base-100 w-96 shadow-xl mt-5">
          <div class="card-body">
            <h2 class="card-title flex justify-center"><%= t("password_resets.edit.title") %></h2>
            <%= form_with model: @user, url: password_reset_path(@token), method: :patch, class: "px-8 pt-6 pb-8 mb-4 max-w-lg" do |f| %>
              <%= render 'shared/error_messages', object: f.object %>

              <div class="mb-4">
                <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2", for: "password" %>
                <%= f.password_field :password, id: "password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
              </div>

              <div class="mb-4">
                <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2", for: "password_confirmation" %>
                <%= f.password_field :password_confirmation, id: "password_confirmation", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
              </div>

              <div class="flex items-center justify-end">
                <%= f.submit class: "btn bg-slate-700 hover:bg-slate-500 text-white" %>
              </div>

              <div class="text-center text-gray-500 md:hover:text-blue-700 mt-6 text-xs">
                <%= link_to t('.to_login_page'), login_path %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
