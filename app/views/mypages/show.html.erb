<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-start min-h-screen">
  <div class="max-w-full mx-auto px-4 mt-10 mb-20">
    <div class="flex flex-col">
      <div class="w-full mx-auto">
        <div class="card bg-base-100 w-96 max-w-full shadow-xl mt-5 p-4">
          <h1 class="card-title flex justify-center"><%= t('.title') %></h1>
          <div class="px-4 md:px-8 pt-6 pb-2 max-w-lg">

            <div class="mb-4 flex justify-center items-center">
              <%= image_tag current_user.user_icon_url, class: 'rounded-full border w-20 h-20 object-cover' %>
            </div>
            <div class="mb-4">
              <p>ニックネーム： <span class="ml-2"><%= current_user.nick_name %></span></p>
            </div>
            <div class="mb-4">
              <p>メールアドレス： <span class="ml-2"><%= current_user.email %></span></p>
            </div>
            
            <div class="flex items-center justify-end">
              <%= link_to '編集', edit_mypage_path, class: "btn bg-slate-700 hover:bg-slate-500 text-white" %>
            </div>

          </div>
        </div>

      </div>
      <div class="mx-auto">
        <div class="p-4 flex flex-col justify-center items-center">
          <div class='text-center'>
            <%= link_to '自分の投稿を見る', my_posts_posts_path, class: "text-gray-500 md:hover:text-blue-700" %>
          </div>
          <div class='text-center mt-4'>
            <%= link_to 'いいねした投稿を見る', likes_posts_path, class: "text-gray-500 md:hover:text-blue-700" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>