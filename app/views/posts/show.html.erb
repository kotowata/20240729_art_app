<div class="container mx-auto pt-5">
  <div class="mb-3">
    <div class="w-full lg:w-8/12 lg:mx-auto">
      <h1 class="text-2xl font-bold"><%= t('.title') %></h1>
      <article class="bg-white shadow-md rounded-lg">
        <div class="p-4">
          <div class="flex flex-col items-center">
            <div class="mb-4">
              <%= image_tag @post.post_image_url, width: "300", height: "200", class: "rounded-lg object-cover" %>
            </div>
            <div class="w-9/12 p-4">
              <h3 class="inline text-xl font-semibold"><%= @post.title %></h3>
              <ul class="flex space-x-2 text-sm text-gray-600">
                <li><%= "by #{@post.user.nick_name}" %></li>
                <li><%= l @post.created_at, format: :long %></li>
              </ul>
              <div class='flex justify-end mt-2'>
                <%= link_to "#", id: "button-edit-#{@post.id}", class: "text-blue-500 hover:text-blue-700" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", id: "button-delete-#{@post.id}", class: "ml-2 text-red-500 hover:text-red-700" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
              <p class="mt-4"><%= simple_format(@post.content) %></p>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
