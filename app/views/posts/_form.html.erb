<%= form_with model: @post, class: "px-4 md:px-8 pt-6 pb-2 max-w-lg" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="mb-3">
    <%= f.label :title, "#{I18n.t('activerecord.attributes.post.title')} <span class='text-red-400 font-light'>(必須)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.text_area :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", rows: "1" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "#{I18n.t('activerecord.attributes.post.content')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.text_area :content, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", rows: "4" %>
  </div>

  <div class="mb-4">
    <%= f.label :event_url, "#{I18n.t('activerecord.attributes.post.event_url')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.text_field :event_url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="mb-4">
    <%= f.label :prefecture_id, "#{I18n.t('activerecord.attributes.post.prefecture_id')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, { prompt: '選択してください' }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" }) %>
  </div>

  <div class="mb-4">
    <%= f.label :start_date, "#{I18n.t('activerecord.attributes.post.start_date')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.date_field :start_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="mb-4">
    <%= f.label :end_date, "#{I18n.t('activerecord.attributes.post.end_date')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.date_field :end_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="mb-6">
    <%= f.label :post_image, "#{I18n.t('activerecord.attributes.post.post_image')} <span class='text-gray-400 font-light'>(任意)</span>".html_safe, class: "block text-gray-700 text-sm" %>
    <%= f.file_field :post_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>

  <div class="flex items-center justify-end">
    <%= f.submit class: "btn bg-slate-700 hover:bg-slate-500 text-white" %>
  </div>


<% end %>
