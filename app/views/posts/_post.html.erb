<div class="w-full sm:w-1/2 lg:w-1/3 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <%= image_tag "post_placeholder.png", class: "w-full h-48 object-cover", width: "300", height:"200" %>
      <div class="p-4">
        <div class="flex justify-between items-center">
          <h4 class="text-lg font-bold">
            <%= link_to post.title, '#' %>
          <h4>
          <div class='flex space-x-2'>
            <%= link_to '#', id: "button-edit-#{post.id}" do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: "button-delete-#{post.id}", method: :delete, data: {confirm: ''} do %>
                <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <ul class="flex space-x-4 mt-2 text-gray-600">
          <li><i class="bi bi-person"></i><%= post.user.nick_name %></li>
          <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
        </ul>
        <p class="mt-2 text-gray-700"><%= post.content %></p>
      </div>
    </div>
  </div>
</div>