<div class="w-80 mx-3 mb-10">
  <div id="post-id-<%= post.id %>">
    <div class="bg-black p-2">
      <div class="bg-white overflow-hidden flex justify-center px-4">
        <%= link_to image_tag(post.post_image_url, class: "mx-auto my-5 h-48 object-contain", width: "300", height:"200"), post_path(post), class: "block" %>
      </div>
    </div>

    <div class="bg-white mt-2 w-3/4 mx-auto shadow-lg">
      <div class="p-3">
        <div class="flex justify-center items-center mb-2 border-b-2 border-neutral-600">
          <h4 class="text-center text-black"><%= post.title %></h4>
        </div>
        <ul class="flex space-x-1 mt-1 text-gray-600 justify-between">
          <div class="flex items-center">
            <li><%= image_tag post.user.user_icon_url, class: 'rounded-full border mr-1', size: '20x20' %></li>
            <li><i class="bi bi-person text-sm"></i><%= post.user.nick_name %></li>
          </div>
          <% if current_user && current_user.own?(post) %>
            <div class="flex space-x-2 ml-auto">
              <%= link_to edit_post_path(post), id: "button-edit-#{post.id}", class: "text-gray-400 hover:text-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4"><path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z" /><path d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z" />
                </svg>
              <% end %>
              <%= link_to post_path(post), id: "button-delete-#{post.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: "text-gray-400 hover:text-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4"><path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          <% else %>
            <%= render 'like_buttons', { post: post } %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>