<% content_for(:title, t('.title')) %>
<div class="max-w-4xl mx-auto pt-3">
  <div class="flex">
    <div class="w-full lg:w-10/12 lg:mx-auto">
      <!-- 検索フォーム -->
      <%= render 'search_form', q: @q, url: posts_path %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="flex flex-wrap">
    <div class="w-full">
      <div class="flex flex-wrap">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3 text-gray-600">ポストがありません</div>
        <% end %>
      </div>
    </div>
  </div class="flex justify-center">
  <%= paginate @posts %>
</div>
