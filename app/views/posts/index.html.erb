<% content_for(:title, t('.title')) %>
<div class="max-w-6xl mx-auto mt-3 pt-5 min-h-screen">
  <!-- 検索フォーム -->
  <div class="flex flex-wrap justify-center">
    <div class="mx-3">
      <%= render 'search_form', q: @q, url: posts_path, class: "mx-2" %>
    </div>
    <div>
      <%= link_to '開催中のみ', posts_path(status: 'ongoing'), class: 'btn btn-primary ml-2' %>
      <%= link_to '全て表示', posts_path(status: 'all'), class: 'btn ml-2' %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="flex flex-wrap justify-center mt-6">
    <div class="w-full">
      <div class="flex flex-wrap justify-center mb-4">
        <% if @posts.present? %>
          <%= render @posts, class: "w-64" %>
        <% else %>
          <div class="mb-3 text-gray-600">ポストがありません</div>
        <% end %>
      </div>
    </div>
  </div class="flex justify-center">
  <%= paginate @posts %>
</div>
