<% content_for(:title, t('.title')) %>
<div class="container mx-auto pt-5 min-h-screen">
  <div class="mb-3 mt-4">
    <div class="w-full lg:w-8/12 lg:mx-auto">
      <h1 class="text-2xl mb-4 text-center"><%= t('.title') %></h1>
      <article class="bg-white shadow-md rounded-lg">
        <div class="p-4">
          <div class="flex flex-col items-center">
            <%= render "form", post: @post %>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>