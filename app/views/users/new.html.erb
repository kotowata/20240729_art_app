<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-start min-h-screen">
  <div class="max-w-4xl mx-auto px-4 mt-10">
    <div class="flex flex-col">
      <div class="w-full mx-auto">
        <h1 class="text-2xl mb-4 text-center"><%= t("users.new.title") %></h1>
        <%= form_with model: @user, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-lg mx-auto" do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="mb-4">
            <%= f.label :nick_name, class: "block text-gray-700 text-sm font-bold mb-2", for: "nick_name" %>
            <%= f.text_field :nick_name, id: "nick_name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2", for: "nick_name" %>
            <%= f.text_field :email, id: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2", for: "nick_name" %>
            <%= f.text_field :password, id: "password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
          </div>

          <div class="mb-6">
            <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2", for: "nick_name" %>
            <%= f.text_field :password_confirmation, id: "password_confirmation", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: " ", required: true %>
          </div>

          <div class="flex items-center justify-between">
            <%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class='text-center text-gray-500 md:hover:text-blue-700'>
    <%= link_to t('.to_login_page'), login_path %>
  </div>
</div>
